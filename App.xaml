<?xml version="1.0" encoding="utf-8"?>

<Application
    x:Class="NSSImporter.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NSSImporter">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="AppBackground" Color="#0E1422"/>
            <SolidColorBrush x:Key="CardBackground" Color="#141B2C"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#5DB9FF"/>
            <SolidColorBrush x:Key="AccentBrush2" Color="#9B8CFF"/>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="CornerRadius" Value="6"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
